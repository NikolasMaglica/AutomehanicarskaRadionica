@model List<Client>

<table style="margin-top: 20px;" class="table table-condensed">
    <thead>
        <tr>
            <th>Ime i prezime</th>
            <th>Adresa</th>
            <th>Email</th>
            <th>Uredi</th>
          
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                  @item.FullName
                </td>
                <td>@item.Address</td>
                <td>@item.Email</td>
              
                <td class="action-buttons d-flex flex-row">

                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-info ml-1">Uredi</a>
                    <form asp-action="Delete" method="post" onsubmit="return confirm('Jeste li sigurni da želite obrisati klijenta?');">
                        <input type="hidden" name="id" value="@item.ID" />
                        <button type="submit" class="btn btn-danger ml-1">Izbriši</button>
                    </form>



                </td>
            </tr>
        }
    </tbody>
</table>
