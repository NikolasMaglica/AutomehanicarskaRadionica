@model Vjezba.Model.Material

<div class="form-group">
    <label class="control-label">Naziv materijala</label>
    <input asp-for="MaterialName" class="form-control" />
    <span asp-validation-for="MaterialName" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="control-label">Stanje na lageru</label>
    <input asp-for="InStockQuantity" class="form-control" />
    <span asp-validation-for="InStockQuantity" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="control-label">Cijena</label>
    <input asp-for="MaterialPrice" class="form-control" />
    <span asp-validation-for="MaterialPrice" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="control-label">Opis usluge</label>
    <textarea asp-for="MaterialDescription" class="form-control" rows="5"></textarea>
    <span asp-validation-for="MaterialDescription" class="text-danger"></span>
</div>
<div class="form-group" style="margin-top: 10px;">
    <input type="submit" value="Spremi" class="btn btn-outline-success" />
</div>
