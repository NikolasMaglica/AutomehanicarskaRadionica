@model Vjezba.Model.Order
@{
    ViewData["Title"] = "Details";
}

@* <h1>Create</h1>

<h4>Applicant</h4> *@
<hr />
<div class="col-11 mx-auto pt-0 p-0">
    <div class="card">
        <div class="card-header bg-dark text-white text-uppercase bg-secondary" style="height:45px;">
            <h4>
                Detalji nardužbe
            </h4>

        </div>
        <form enctype="multipart/form-data" asp-action="Create">
            <div class="row">
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Date" class="control-label"></label>
                        <input asp-for="Date" class="form-control-plaintext" readonly />

                    </div>

                </div>
            


                @* <div class="col-4">
                <div class=" form-group col-12 justify-content-center align-middle">
                <div class="col-md-6 btn-group">
                <img id="PreviewPhoto" src="~/images/@Model.PhotoUrl" alt="Logo" width="200" height="200" style="border:1px; margin-top:20px;  " />

                </div>
                </div>

                </div> *@


                <div class="col-md-12">
                    <table id="EduTable" class="table">
                        <thead>
                            <tr>
                                <th>
                                    Količina
                                </th>
                                <th>
                                    Materijal
                                </th>
                              
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>



                            @for (int i = 0; i < Model.OrderMaterials.Count; i++)
                            {
                                <tr>
                                    <td>
                                        @Html.EditorFor(x => x.OrderMaterials[i].Quantity,new { AddHtmlAttributes = new {@class = "form-control"}})

                                    </td>
                                    <td>
                                        <select asp-for="@Model.OrderMaterials[i].MaterialId" class="form-control" asp-items="ViewBag.PossibleMaterials"></select>

                                    </td>
                                 
                                    <td>
                                    </td>

                                </tr>

                            }

                        </tbody>


                    </table>

                </div>
                <input type="hidden" id="hdnLastIndex" value="0" />


                <div class="col-12 ">
                    <div class=" col-6 form-group text-right p-2">
                        <a asp-action="Index" class="btn btn-secondary">&nbsp;Back&nbsp;</a>

                    </div>


                </div>

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


}
